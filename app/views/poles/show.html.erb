<div class="content  <%= theme(@pole.nom) %>">
  <header class="p-3 mb-2 text-white">
    <div class="row d-flex flex-row-reverse">
      <div class="col">
      <h2>
        <%= @pole.nom %><br>
      </h2>
      <p>
        <%= @pole.adresse %><br>
        <%= @pole.adresse2 %><br>
        <%= @pole.code_postal %> <%= @pole.ville %><br>
        <%= @pole.tel %><br>
        <!-- Button trigger modal -->
        <% if policy(@pole).edit? %>
        <button type="button" class="btn btn-outline-light" data-toggle="modal" data-target="#adresseModal">
            <i class="fas fa-pencil-alt"></i>
        </button>
        <% end %>
      </p>
      </div>
      <div class="col d-flex flex-column-reverse">
        <div class="bulle d-flex justify-content-center align-items-center">
          <div class="bulle-text">
        <!-- Button trigger modal -->
        <% if policy(@pole).edit? %>
        <button type="button" class="btn btn-outline-light" data-toggle="modal" data-target="#bulleModal">
            <i class="fas fa-pencil-alt"></i>
        </button>
        <% end %>
            <%= raw( @pole.bulle ) %>
          </div>
        </div>
      </div>
    </div>
  </header>
  <div class="row  bg-light m-3 rounded-pill">
    <div class="col p-5">
      <p class="ml-5 pt-5 pb-3 pl-2 text-justify">
        <!-- Button trigger modal -->
        <% if policy(@pole).edit? %>
        <button type="button" class="btn btn-outline-dark" data-toggle="modal" data-target="#descriptionModal">
            <i class="fas fa-pencil-alt"></i>
        </button>
        <% end %>
        <%= raw( @pole.description ) %>
      </p>
    </div>
    <div class="col p-5">
      <!-- Button trigger modal -->
        <% if policy(@pole).edit? %>
        <button type="button" class="btn btn-outline-dark" data-toggle="modal" data-target="#principeModal">
            <i class="fas fa-pencil-alt"></i>
        </button>
        <% end %>
      <p>
        <%= raw( @pole.principe ) %>
      </p>
    </div>
  </div>
  <div class="row">
    <div class="col ml-5 pl-5">
    <% @pole.services.each do |service| %>
      <h3><%= service.nom %></h3>
      <%= link_to edit_pole_service_path(service) do %>
        <i class="fas fa-pencil-alt"></i>
      <% end %>
      <%= raw(service.description) %>
      <div class="row">
        <div class="col-6">
        <%= raw(service.mission) %>
        </div>
        <div class="col-6">
        <%= raw(service.modalités) %>
        </div>
      </div>
    <% end %>
    </div>
  </div>

  <div class="footer">
  </div>
</div>



<!-- Modal -->
<div class="modal fade" id="adresseModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Modifier l'adresse</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <%= simple_form_for @pole do |f| %>
          <%= f.input :adresse %>
          <%= f.input :adresse2 %>
          <%= f.input :code_postal %>
          <%= f.input :ville %>
          <%= f.input :tel %>
          <%= f.input :email %>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Fermer</button>
        <%= f.button :submit, "Mettre à jour", class:"btn btn-primary" %>
        <% end %>
      </div>
    </div>
  </div>
</div>

