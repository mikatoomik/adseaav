<header>
  <div class="galerie-job py-3 mx-n3 my-3">
    <div class="banner">
    </div>
    <h2 class="p-2">Rejoignez-nous !</h2>
  </div>
  <h1 class="title">Nos offres d'emploi</h1>
  <div class="row">
    <div class="col">
      <div class="bg-info arondi m-3 p-3 ">
        <h5>Filtrez par intitulé, par site</h5>
      </div>
    </div>
    <div class="col">
      <div id="recherche" class="btn btn-success arondi btn-block">
        <form class="form-inline">
          <div class="form-group mb-2">
            <%= form_tag services_path, method: :get do %>
            <%= text_field_tag :query,
        params[:query],
        class: "form-control",
        placeholder: "Recherche"
      %>
          </div>
          <div class="form-group mx-sm-3 mb-2">
            <%= submit_tag "Chercher", class:"btn btn-success" %>
            <% end %>
          </div>
        </form>
      </div>
    </div>
  </div>


</header>
<div class="d-flex flex-wrap">
  <% @jobs.each do |job| %>
  <div class="card mx-1 mb-3 " style="width: 18rem;">
    <div class="card-header">
      <h5 class="card-title">
        <%= job.intitule %></h5>
    </div>
    <div class="card-body">
      <h6 class="card-subtitle text-muted"><%= job.pole.nom %></h6>
      <p class="card-text">
        <% if policy(job).edit? %>
        <%= simple_form_for(job) do |f| %>
        <%= f.input :resume %>
        <%= f.button :submit,  "Mettre à jour"%>
        <% end %>
        <% end %>
        <%= raw(job.intitule) %>
      </p>
    </div>
    <div class="card-footer text-muted">
      <%= job.antenne.nom %>
    </div>
  </div>
  <% end %>
</div>
