<div class="col-12 col-md-6 mx-auto">
  <div class="jumbotron">
    <h3>Créer un service</h3>
    <%= simple_form_for(@service) do |f| %>
      <%= f.input :nom %>
      <%= f.association :pole, collection: Pole.order(:nom), label_method: :nom, prompt: "Précisez le pôle" %>
      <%= f.button :submit,  "Créer le nouveau service", class:"btn btn-success" %>
    <% end %>
  </div>
</div>
